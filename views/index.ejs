  <body>
    <header>
        <%- include('partials/nav') %>
      <div class="text">
        <h1>Design & High Quality</h1>
        <p>
          Everything from design to quality is extremely good and high-quality
        </p>
        <div class="buttons">
          <button class="first">Open Store</button>
          <button>Explore More</button>
        </div>
      </div>
      <div class="image">
        <img
          src="images/header_shoes.png"
          alt=""
        />
      </div>
    </header>
