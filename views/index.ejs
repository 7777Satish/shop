    <section class="arrivals_container">
        <div class="arrivals">
        <div class="top">
            <div class="left">
                <h2>New Arrivals</h2>
            </div>
            <div class="right">
                <span>All products</span>
            </div>
        </div>
        <br/>
        <br/>
        <div class="bottom">
            <% for(var i=1;i<=8;i++){ %>
                <%- include('partials/card',{'i':Math.floor(Math.random()*4+1)})%>
            <% } %>
        </div>
        <div class="buttons_div">
          <div class="buttons">
            <button class="first">Open Store</button>
            <button>Explore More</button>
          </div>
        </div>
        </div>
    </section>

    <section class="banner_container"  id="banner_container">
      <div class="banner">
        <div class="top"><h2>Featured</h2></div>
        <div class="bottom">
          <div class="cards">
            <%- include('partials/card',{i:1}) %>
            <%- include('partials/card',{i:2}) %>
            <%- include('partials/card',{i:3}) %>
